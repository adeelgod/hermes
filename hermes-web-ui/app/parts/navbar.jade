                span.sr-only Menu
                span.icon-bar
                span.icon-bar
                span.icon-bar
        #hlunavbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-left
                li
                    a(href='help.html', target='_blank', bs-tooltip='tooltips.help')
                        i.fa.fa-2x.fa-question
                li.nav-divider
                li
                    a(href='', ui-sref='home', bs-tooltip='tooltips.orders')
                        i.fa.fa-2x.fa-search
                li
                    a(href='', ui-sref='shipping', bs-tooltip='tooltips.shipping')
                        i.fa.fa-2x.fa-send
