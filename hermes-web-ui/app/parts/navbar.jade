                    li
                        a(href='', data-animation='am-flip-x', data-html='true', bs-dropdown='dropdown')
                            i.fa.fa-2x.fa-list-alt
                li
                    a(href='', ui-sref='configuration', ng-show='authenticated', bs-tooltip='tooltips.configuration')
                        i.fa.fa-2x.fa-cog
                li
                    button.btn.navbar-btn.btn-primary(type='button', ui-sref='signin', ng-hide='authenticated', bs-tooltip='tooltips.signin') Sign in
