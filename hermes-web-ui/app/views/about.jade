extends /layouts/_page

block content
    .row
        .col-md-offset-3.col-md-6.col-xs-12
            h3 Hermes
            p &copy; 2014-2015 Monkeys in Town Lda.
            p
                a(href='mailto:cheetah@monkeysintown.com') cheetah@monkeysintown.com
    .row
        .col-md-offset-3.col-md-6.col-xs-12
            h4 Support

            form.form
                .form-group
                    p Note
                    textarea(id='note', ng-model='support.note')
                .form-group
                    button.btn.btn-default(type='button', ng-model='support.log', bs-checkbox='')
                        i.fa(ng-class="{'fa-circle': support.log, 'fa-circle-o': !support.log}")
                    label Include Log File
                .form-group
                    button.btn.btn-default(type='button', ng-model='support.properties', bs-checkbox='')
                        i.fa(ng-class="{'fa-circle': support.properties, 'fa-circle-o': !support.properties}")
                    label Include Configuration Files
                button.btn.btn-primary(type='button', ng-click='send()') Send
    .row
        .col-md-offset-3.col-md-6.col-xs-12
            h4 Version
            table.table.table-condensed
                tr
                    td Version
                    td {{version.description}}
                tr
                    td Commit Time
                    td {{version.commitTime}}
                tr
                    td Build Time
                    td {{version.buildTime}}
                tr
                    td Origin URL
                    td {{version.originUrl}}
                tr
                    td Dirty
                    td {{version.dirty}}
            button.btn.btn-primary(type='button', ng-click='version()') Refresh
