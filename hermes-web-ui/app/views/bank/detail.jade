extends /layouts/_page
block content
    .row(ng-show='loading')
        .col-md-12
            .progress
                .progress-bar.progress-bar-striped.active(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%')
                    span.sr-only &nbsp;
    .row(ng-hide='loading')
        .col-md-12
            form(role='form', name='bankForm', novalidate='')
                .form-group
                    include /parts/form_search
                    .form-group
                        .row
                            .col-md-6
                                .btn-group.btn-group-lg
                                    button.btn.btn-default(type='button', ng-click='toggleAdvanced()', ng-disabled='busy')
                                        i.fa.fa-cogs
                                        | &nbsp;
                                        span(ng-show='advanced') Simple
                                        span(ng-hide='advanced') Advanced
                            .col-md-6
    .row
        .col-md-12
            ul.nav.nav-tabs.nav-justified
                li(role='presentation', ng-class="{active: step=='step1'}")
                    a(href='', ng-click="selectStep('step1')") Step 1
                li(role='presentation', ng-class="{active: step=='step2'}")
                    a(href='', ng-click="selectStep('step2')") Step 2
    .row(ng-show='loading')
        .col-md-12
            .progress
                .progress-bar.progress-bar-striped.active(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%')
                    span.sr-only &nbsp;
    .row(ng-hide='loading')
        .col-md-12
            div(ng-include='stepTemplate')
