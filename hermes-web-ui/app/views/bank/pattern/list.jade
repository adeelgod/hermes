extends /layouts/_page
block content
    .row(ng-show='loading')
        .col-md-12
            .progress
                .progress-bar.progress-bar-striped.active(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%')
                    span.sr-only &nbsp;
    .row(ng-hide='loading')
        .col-md-12
            h3
                button.btn.btn-default(type='button', ui-sref='bank_pattern_edit({id: null})')
                    i.fa.fa-asterisk
                | &nbsp;
                | Bank Statement Patterns
            table.table.table-condensed(ng-show='patterns')
                thead
                    tr
                        td Name
                        td Description
                        td
                        td
                tbody
                    tr(ng-repeat="pattern in patterns | orderBy: 'pos'")
                        td {{pattern.name}}
                        td {{pattern.description}}
                        td
                            button.btn.btn-default(type='button', ui-sref='bank_pattern_edit({id: pattern.uuid})')
                                i.fa.fa-pencil
                        td
                            button.btn.btn-sm.btn-danger(type='button', ng-click='remove(pattern.uuid)')
                                i.fa.fa-trash
