extends /layouts/_page
block content
    .row
        .col-md-6
            form.form-inline(role='form', name='orderForm', novalidate='')
                .form-group
                    h2
                        | Order Search
                        | &nbsp;
                        i.fa.fa-calendar
                        | &nbsp;
                        i.fa.fa-arrows-h
                        | &nbsp;
                        i.fa.fa-calendar
                    hr
                    .form-group(ng-class="{'has-error': orderForm.fromDate.$invalid}")
                        input.form-control(name='fromDate', ng-model='fromDate', data-date-format='dd-MM-yyyy', data-date-type='number', placeholder='From', bs-datepicker='', type='text')
                    .form-group(ng-class="{'has-error': orderForm.untilDate.$invalid}")
                        input.form-control(name='untilDate', ng-model='untilDate', data-date-format='dd-MM-yyyy', data-date-type='number', placeholder='Until', bs-datepicker='', type='text')
                    .form-group
                        .btn-group
                            button.btn.btn-primary(type='button', ng-click='search()')
                                i.fa.fa-search
                            button.btn.btn-success(type='button', ng-click='select()')
                                i.fa.fa-check
                            button.btn.btn-danger(type='button', ng-click='unselect()')
                                i.fa.fa-close
                            button.btn.btn-default(type='button', ng-click='print()', ng-disabled='printing')
                                i.fa.fa-print
        .col-md-6
            nav
                ul.pagination
                    li(ng-repeat='page in pages()', ng-class="{'active': isCurrentPage(page)}")
                        a(href='', ng-click='go(page)') {{page}}
    .row(ng-show='orders')
        .col-md-12
            table.table.table-condensed
                thead
                    tr
                        td Charge
                        td
                        td Order ID
                        td Invoice ID
                        td Shipping ID
                tbody
                    tr(ng-repeat='entry in orders.content')
                        td
                            span(ng-show="$index%configuration['hermes.charge.size']==0") {{ $index/configuration['hermes.charge.size']+1+orders.number }}
                        td
                            i.fa(ng-class="{ 'fa-check': entry.selected, 'fa-minus': !entry.selected }")
                        td {{entry.orderId}}
                        td
                            span.label(ng-class="{ 'label-success': entry.invoice, 'label-danger': !entry.invoice }")
                                i.fa(ng-class="{ 'fa-check': entry.invoice, 'fa-close': !entry.invoice }")
                            | &nbsp;{{entry.invoiceId}}
                        td
                            span.label(ng-class="{ 'label-success': entry.label, 'label-danger': !entry.label }")
                                i.fa(ng-class="{ 'fa-check': entry.label, 'fa-close': !entry.label }")
                            | &nbsp;{{entry.shippingId}}
