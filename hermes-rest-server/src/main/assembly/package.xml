<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}-shaded.jar</source>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <destName>${project.artifactId}.jar</destName>
        </file>
        <!--
        <file>
            <source>${project.build.directory}/${project.artifactId}.exe</source>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <destName>${project.artifactId}.exe</destName>
        </file>
        -->
    </files>
    <fileSets>
        <!--
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}-shaded.jar</include>
            </includes>
        </fileSet>
        -->
        <fileSet>
            <directory>${basedir}/src/main/conf</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <!--
        <fileSet>
            <directory>${basedir}/src/main/examples</directory>
            <outputDirectory>${project.artifactId}/examples</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        -->
        <fileSet>
            <directory>${basedir}/src/main/templates</directory>
            <outputDirectory>${project.artifactId}/templates</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/script</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../hermes-doc/target/generated-docs</directory>
            <outputDirectory>${project.artifactId}/doc</outputDirectory>
            <includes>
                <include>**/*.pdf</include>
                <include>**/*.html</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
