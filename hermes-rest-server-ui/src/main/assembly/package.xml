<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}-shaded.jar</source>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <destName>${project.artifactId}.jar</destName>
        </file>
        <file>
            <source>${basedir}/src/main/resources/META-INF/spring/applicationContext-hermes-camel.xml</source>
            <outputDirectory>${project.artifactId}</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/conf</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/templates</directory>
            <outputDirectory>${project.artifactId}/templates</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/script</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
